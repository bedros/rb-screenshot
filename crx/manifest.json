{
	"manifest_version": 2,
	"name": "Review Board Screenshot Extension",
	"version": "1.0",
	"background": {
		"persistent": false,
		"scripts": ["js/jquery-2.1.4.min.js", "js/background.js"]
	},

	"icons": {
		"16": "images/icons/icon16.png",
		"48": "images/icons/icon48.png",
	   "128": "images/icons/icon128.png"
	},

	"browser_action": {
		"default_title": "Review Board Screenshot Tool",
		"default_popup": "popup.html"
	},

	"permissions": [
		"activeTab",
		"storage",
		"http://*/",
		"https://*/"
	]
}